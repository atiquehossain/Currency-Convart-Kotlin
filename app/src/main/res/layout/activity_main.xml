<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/common_page_bg">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:layout_margin="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >



            <LinearLayout
                android:id="@+id/calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Result"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/flagImageViewOne"
                        android:layout_width="20dp"
                        android:layout_weight=".3"
                        android:layout_height="30dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:src="@drawable/bangladesh"
                        />

                    <Spinner
                        android:id="@+id/spinnerOne"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".2"
                        />

                    <EditText
                        android:id="@+id/inputOne"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/hint_number"
                        android:imeOptions="actionDone"
                        android:inputType="numberSigned"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:scrollHorizontally="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:background="@drawable/new_edit_text_rectangle_bg" />
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/flagImageViewTwo"
                        android:layout_width="20dp"
                        android:layout_weight=".3"
                        android:layout_height="30dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:src="@drawable/bangladesh"
                        />

                    <Spinner
                        android:id="@+id/spinnerTwo"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight=".2"
                        />

                    <EditText
                        android:id="@+id/inputTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:hint="@string/hint_number"
                        android:imeOptions="actionDone"
                        android:inputType="numberSigned"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:scrollHorizontally="true"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:layout_weight="1"
                        android:background="@drawable/new_edit_text_rectangle_bg" />
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/calculate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/HistorySwitch"
                    android:layout_marginBottom="16dp"

                    >

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_credit"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        style="@style/Widget.MaterialComponents.Button.Icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Convart"

                        />



                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>






    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>